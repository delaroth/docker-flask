pipeline {
    agent any

    stages {
        stage('echo') {
            steps {
                echo 'hi shahar'
            }

        }
        stage('docker build'){
             steps{
          sh 'docker build -t delaroth/new-image .'
          docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy image $DOCKERHUB_USER/$IMAGE_NAME
          sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
          sh 'docker push delaroth/new-image'
}
    }
}
}
